@model MVCCRUD.Models.Authorizationmodels.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    <div class="main">
        <form asp-action="Login" method="post">
            <div class="container">
                <h1 class="title">Login Menu</h1>
                <div class="form-group">
                    <label asp-for="Username">Username</label>
                    <input type="text" asp-for="Username" class="form-control" />
                    <div class="msg">
                        <span class="err" asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <div class="msg">
                        <span class="err" asp-validation-for="Password"></span>
                    </div>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="msg">
                        <span class="err"> @TempData["msg"]</span>
                    </div>
                }
                <button type="submit" class="btn btn-primary">Login</button>
                <p>
                    <a href="/UserAuthorization/Registration">Not a user? Click here to sign up</a>
                </p>
            </div>
        </form>
    </div>
</body>
</html>
