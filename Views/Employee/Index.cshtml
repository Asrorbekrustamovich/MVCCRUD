@model MVCCRUD.Models.PaginationViewModel<MVCCRUD.Models.Domain.Employee>
<link rel="stylesheet" href="~/css/site.css" />
<h1>Employees</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Date of Birth</th>
            <th>Department</th>
            <th>Surname</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Items)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateofBirth.ToString("dd-MM-yyyy")</td>
                <td>@employee.Department</td>
                <td>@employee.Surname</td>
                <td><a class="icon" asp-controller="Employee" asp-action="View" asp-route-id="@employee.Id"><img src="~/images/edit-pencil-line-02-svgrepo-com.svg" /></a></td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<div class="pagination-container">
    @if (Model.TotalPages > 1)
    {
        for (int i = 1; i <= Model.TotalPages; i++)
        {
            <a href="@Url.Action("Index", new { page = i })" class="@(i == Model.PageNumber ? "active" : "")">@i</a>
        }
    }
</div>

<!-- Download Schedule Button -->
<div style="margin-top: 20px;">
    <a href="@Url.Action("DownloadSchedule", "Employee")" class="btn btn-primary">Download Schedule</a>
</div>
