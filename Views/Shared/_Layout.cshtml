<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Auth Project</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="site.js"></script>
</head>
<body>
    <div class="sidebar @if (User.IsInRole("admin")) {
    <text>admin</text>
 }">
        @if (User.IsInRole("admin"))
        {
            <a asp-controller="Admin" asp-action="Display">Admin Page</a>
            <a asp-controller="Employee" asp-action="Add">Add Employee</a>
            <a asp-controller="Employee" asp-action="Index">Employee List</a>

            @* <div class="profile-board">
                <a asp-controller="Admin" asp-action="Profile">Admin Profile</a>
            </div> *@
        }

        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Dashboard" asp-action="Display">Dashboard</a>
            <a asp-controller="UserAuthorization" asp-action="Logout">Logout</a>
        }
    </div>

    <div class="container">
        @RenderBody()
    </div>
</body>
</html>